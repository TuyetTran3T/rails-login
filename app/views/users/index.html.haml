%p#notice= notice
%h1 Users
%table
  %thead
    %tr
      %th User name
      %th Password
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.user_name
        %td= user.password
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
        -#%td= link_to 'Create Json', action: :create_json, :id => user.id
%br/
= link_to 'New User', new_user_path
